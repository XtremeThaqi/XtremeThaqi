// JS

document.addEventListener('DOMContentLoaded', () => {
    const pizzaMenuButton = document.getElementById('btn1');
    const saladMenuButton = document.getElementById('btn2');
    const pizzaMenu = document.getElementById('pizza-menu');
    const saladMenu = document.getElementById('salad-menu');

    pizzaMenuButton.addEventListener('click', function () {
        pizzaMenu.classList.add('active');
        saladMenu.classList.remove('active');
    });

    saladMenuButton.addEventListener('click', function () {
        saladMenu.classList.add('active');
        pizzaMenu.classList.remove('active');
    });

    // Initialize with the pizza menu shown
    pizzaMenu.classList.add('active');
});

